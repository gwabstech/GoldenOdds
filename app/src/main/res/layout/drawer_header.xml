<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/download"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/Son"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/profile_logoImg"
            android:src="@mipmap/logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="GOLDEN ODDS"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>





    </LinearLayout>

   <LinearLayout
       android:id="@+id/llt"
       android:layout_below="@id/Son"
       android:layout_margin="3dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:gravity="center"
           android:textSize="20sp"
           android:textColor="#000000"
           android:textStyle="italic"
           android:text="@string/_80_winning_rate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

   </LinearLayout>

 <LinearLayout
     android:layout_below="@id/llt"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_height="wrap_content">

     <com.google.android.gms.ads.AdView
         android:layout_marginTop="5dp"
         xmlns:ads="http://schemas.android.com/apk/res-auto"
         android:id="@+id/adViewhdv"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         ads:adSize="BANNER"
         ads:adUnitId="ca-app-pub-6125586393387357/8542397241">
     </com.google.android.gms.ads.AdView>
 </LinearLayout>



</RelativeLayout>